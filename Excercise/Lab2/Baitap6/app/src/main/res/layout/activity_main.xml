<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxOne"
        android:layout_above="@id/checkboxTwo"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="90dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxTwo"
        android:layout_above="@id/checkboxThere"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="90dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxThere"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="100dp"
        />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seekbarOne"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbarTwo"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@id/checkboxOne"
        android:thumb="@drawable/bird" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/buffalo_icon"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekbarTwo"
        android:layout_above="@id/seekbarThere"
        android:layout_toRightOf="@id/checkboxTwo"
        android:layout_marginBottom="100dp"
        />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/turtle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekbarThere"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/checkboxThere"
        android:layout_marginBottom="100dp"
        />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:layout_margin="10dp"
        android:id="@+id/txtDiem"
        />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/btnPlay"
        android:src="@drawable/play_icon"
        android:layout_centerInParent="true"
        />
</RelativeLayout>